<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UltimateWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap_spacelab.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark  border-bottom bg-transparent" id="navBarPrincipal" style="background-color: lightcoral;">
            <div class="container">
                <a class="navbar-dark" asp-area="" asp-controller="Home" asp-action="Index">UltimateWeb</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1" style="margin-left: 200px">
                        <li class="nav-item">
                            <b><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">ÚLTIMOS JOGOS</a></b>
                        </li>
                        <li class="nav-item">
                            <b><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">ESTATÍSTICAS</a></b>
                        </li>
                        <li class="nav-item">
                            <b><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">JOGOS E GALERIA</a></b>
                        </li>
                        <li class="nav-item">
                            <b><a class="nav-link text-dark" asp-area="" asp-controller="Aluno" asp-action="Create">CADASTRAMENTO DE ATLETA</a></b>
                        </li>
                       
                        <li class="nav-item">

                            <b><a class="nav-link text-body" style="margin-left: 60px; font-size: 12px;" asp-controller="Usuario" asp-action="Index">LOGIN</a></b>

                        </li>
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-secondary">
        <div class="container">
            &copy; 2021 - Ultimate Basketball
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
